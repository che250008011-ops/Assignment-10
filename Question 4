#include <iostream>
#include <string>
using namespace std;

struct SalesRecord {
    string month;
    float amount;
};

int main() {
    SalesRecord sales[12];
    float total = 0;

    
    cout << "Enter sales data for 12 months:\n";
    for (int i = 0; i < 12; i++) {
        cout << "Enter month name: ";
        cin >> sales[i].month;
        cout << "Enter sales amount: ";
        cin >> sales[i].amount;
        total += sales[i].amount;
    }

    
    float average = total / 12;

    
    cout << "\nAverage sales: " << average << endl;
    cout << "Months with sales above average:\n";
    for (int i = 0; i < 12; i++) {
        if (sales[i].amount > average) {
            cout << sales[i].month << " (" << sales[i].amount << ")\n";
        }
    }

    return 0;
}

 









  

